<header>
    <% include ../partials/header %>
</header>

<main>
     

    <div class="jumbotron">
        <h3>Insert a new post</h3>
        <div class="card">
            <div class="card-body">
                <form name="form1" method="POST" action="/addpost">
                    <div class="form-group col-4">
                        <label > Post Title</label>
                        <input type="text" name="postTitle" class="form-control">
                    </div>
                    <div class="form-group col-8">
                        <label > Post Description</label>
                        <textarea name="postDesc" class="form-control"> </textarea>
                    </div>
                    <div class="form-group col-2">
                        <button class="btn btn-info" type="submit">Create Post</button>
                    </div>
                </form>
            </div>
        </div>  
    </div>
